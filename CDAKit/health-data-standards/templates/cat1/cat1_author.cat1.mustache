<!-- SHALL have 1..* author. MAY be device or person. The author of the CDA document in this example is a device at a data submission vendor/registry. -->
<author>
<time value="{{ date_as_number(time) }}"/>
<assignedAuthor>
<!-- Registry author ID -->
{{#each(ids)}}{{>cat1_id.cat1 }}{{/}}
{{>ccda_code_without_reference.ccda }}
{{#each(addresses)}}{{>cat1_address.cat1 }}{{/}}
{{#each(telecoms)}}{{>cat1_telecom.cat1 }}{{/}}
{{#person}}
  <assignedPerson>
    <name>
      {{#person.prefix}}<suffix>{{.}}</suffix>{{/person.prefix}}
      {{#person.given_name}}<given>{{.}}</given>{{/person.given_name}}
      {{#person.family_name}}<family>{{.}}</family>{{/person.family_name}}
      {{#person.suffix}}<suffix>{{.}}</suffix>{{/person.suffix}}
    </name>
  </assignedPerson>
{{/person}}
{{#device}}
  <assignedAuthoringDevice>
    <manufacturerModelName>{{device.model}}</manufacturerModelName>
    <softwareName>{{device.name}}</softwareName>
  </assignedAuthoringDevice>
{{/device}}
{{#organization}}<representedOrganization>{{>cat1_organization.cat1 }}</representedOrganization>{{/organization}}
</assignedAuthor>
</author>